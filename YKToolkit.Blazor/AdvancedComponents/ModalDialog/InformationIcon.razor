    public string Stroke { get; set; } = "black";

    [Parameter]
    public string StrokeThickness { get; set; } = "2";

    [Parameter]
    public string IconStroke { get; set; } = "white";

    [Parameter]
    public string IconStrokeThickness { get; set; } = "4px";
}
