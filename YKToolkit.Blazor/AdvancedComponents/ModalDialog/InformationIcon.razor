
@namespace YKToolkit.Blazor

<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="@Fill" stroke="@Stroke" stroke-width="@StrokeThickness" stroke-linecap="round" stroke-linejoin="round" class="d-block mx-auto" role="img">
