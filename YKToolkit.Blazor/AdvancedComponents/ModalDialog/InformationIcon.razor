    <circle r="19" cx="20" cy="20" />
    <path d="M 20 10 L 20 12 Z" style="stroke:@IconStroke; stroke-width:@IconStrokeThickness;" />
    <path d="M 20 18 L 20 30 Z" style="stroke:@IconStroke; stroke-width:@IconStrokeThickness;" />
